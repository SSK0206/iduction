<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Description</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <% if post.user_avatar %>
            <td><%= image_tag post.user_avatar %></td>
        <% else%>
            <td><%=post.user_avatar%></td>
        <% end %>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%== post.content %></td>
        <td><%= link_to 'Show', post %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>




<% if @user %>
	<%= link_to "新規投稿", new_post_path %>
<% end %>

