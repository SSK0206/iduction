<div class="col-md-6 col-md-offset-1">
	<div class="form-inline" style="margin-top: 10px; padding-bottom: 5px;">
		<%= form_tag(root_path, method: :get, enforce_utf8: false) do |f| %>
		<div class="form-group">
			<%= autocomplete_field_tag 'post[title]', nil,  autocomplete_post_title_posts_path, :placeholder => '記事名を検索', :class => "form-control my-form" %>
		</div>
		<div class="form-group">
			<%= submit_tag "検索", :name => nil, :class => "btn btn-primary" %>
		</div>
		  
		<% end %>

	</div>

</div>